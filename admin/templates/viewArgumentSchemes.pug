extends index.pug

block content

    div
        p
            | Here are the current saved schemes
        div
            each val in schemes
                div= val.label
                    each question in val.criticalQuestions
                        li= question
                div
                    a(href='/admin/dashboard/scheme/edit/' + val.id) Edit
                    a(href='/admin/dashboard/scheme/delete/' + val.id) Delete
                

    a(href='/admin/dashboard') Back

    script.